    <Spinner
        android:id="@+id/spinner_monate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/hint_Einnahme"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize = "15dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_monate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:hint="@string/hint_Ausgabe"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        android:textSize = "15dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_monate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:hint="@string/hint_Saldo"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize = "15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonBerechne"
        android:layout_width="120dp"
        android:layout_height="38dp"

        android:layout_marginStart="28dp"


        android:layout_marginTop="28dp"
        android:text="Berechne Saldo"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Jahr eintragen"
        android:inputType="number"
        android:textSize = "15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_kat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="252dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="132dp"
        android:hint="Summe"
        android:textSize = "15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonBerechne2"
        android:layout_width="120dp"
        android:layout_height="38dp"

        android:layout_marginStart="24dp"

        android:layout_marginTop="64dp"
        android:text="Berechne Summe"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
